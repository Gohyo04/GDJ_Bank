<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.gohyo.app.product.ProductDAO">
  	<select id="getList" resultType="ProductDTO">
		SELECT * FROM PRODUCT
  	</select>
  	
  	<insert id="doAdd" parameterType="ProductDTO">
  		INSERT INTO PRODUCT (PRODUCTNUM, PRODUCTNAME,PRODUCTRATE) VALUES (PNPK_SEQ.NEXTVAL,#{productName},#{productRate})
  	</insert>
  </mapper>